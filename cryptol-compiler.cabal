cabal-version:      3.4
name:               cryptol-compiler
version:            0.1.0.0
-- synopsis:
-- description:
license:            BSD-3-Clause
license-file:       LICENSE
author:             Iavor Diatchki
maintainer:         iavor.diatchki@gmail.com
copyright:          Galois Inc, 2023
category:           Language
build-type:         Simple
extra-doc-files:    CHANGELOG.md

extra-source-files:
  dword/Cargo.toml
  dword/src/*.rs
  rts-rust/Cargo.toml
  rts-rust/src/*.rs

common warnings
    ghc-options: -Wall -O2

common extensions
    default-extensions:
      OverloadedStrings,
      BlockArguments,
      ImportQualifiedPost,
      ImplicitParams,
      ConstraintKinds,
      DeriveFunctor,
      DeriveFoldable,
      DeriveTraversable,
      DerivingVia,
      GeneralizedNewtypeDeriving,
      FlexibleInstances,
      FlexibleContexts,
      TypeFamilies,
      DataKinds,
      MultiParamTypeClasses,
      FunctionalDependencies,
      PatternSynonyms,
      TypeOperators,
      ViewPatterns,
      RankNTypes,
      ScopedTypeVariables

common executable
    import: warnings, extensions
    ghc-options: -threaded -rtsopts "-with-rtsopts=-N1 -A64m"




library
    import: warnings, extensions
    exposed-modules:
      Cryptol.IR.Eta

      Cryptol.Compiler.IR
      Cryptol.Compiler.IR.Prims
      Cryptol.Compiler.IR.Common
      Cryptol.Compiler.IR.Type
      Cryptol.Compiler.IR.EvalType
      Cryptol.Compiler.IR.Subst
      Cryptol.Compiler.IR.Rename
      Cryptol.Compiler.IR.Free
      Cryptol.Compiler.IR.Cryptol

      Cryptol.Compiler.Monad
      Cryptol.Compiler.Error
      Cryptol.Compiler.PP

      Cryptol.Compiler.Cry2IR.Type
      Cryptol.Compiler.Cry2IR.SpecializeM
      Cryptol.Compiler.Cry2IR.Specialize
      Cryptol.Compiler.Cry2IR.ConvertM
      Cryptol.Compiler.Cry2IR.ChooseSpec
      Cryptol.Compiler.Cry2IR.InstanceMap
      Cryptol.Compiler.Cry2IR.Compile
      Cryptol.Compiler.Cry2IR.RepHints

      Cryptol.Compiler.Rust.Compiler
      Cryptol.Compiler.Rust.Names
      Cryptol.Compiler.Rust.NameMap
      Cryptol.Compiler.Rust.CompileType
      Cryptol.Compiler.Rust.CompileTrait
      Cryptol.Compiler.Rust.CodeGen
      Cryptol.Compiler.Rust.CompileSize
      Cryptol.Compiler.Rust.CompilePrim
      Cryptol.Compiler.Rust.Utils
      Cryptol.Compiler.Rust.Monad
      Cryptol.Compiler.Rust.Crate

    -- other-modules:
    build-depends:
      base,
      containers,
      text,
      pretty,
      cryptol,
      monadLib,
      bytestring,
      language-rust,
      file-embed,
      filepath,
      directory,
      template-haskell,
      aeson

    hs-source-dirs:   src
    default-language: Haskell2010

executable cryptol-compiler
    import:           executable
    main-is:          Main.hs
    other-modules:
      Options
    build-depends:
        base,
        containers,
        text,
        simple-get-opt,
        cryptol-compiler,
        language-rust,
        cryptol,
        filepath,
        directory


    hs-source-dirs:   app
    default-language: Haskell2010

test-suite cryptol-compiler-test
    import:           executable
    default-language: Haskell2010
    other-modules:    Golden
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base,
        cryptol-compiler,
        tasty,
        tasty-golden,
        process,
        temporary,
        directory,
        bytestring,
        utf8-string
