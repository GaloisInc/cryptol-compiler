cabal-version:      3.4
name:               cryptol-compiler
version:            0.1.0.0
-- synopsis:
-- description:
license:            BSD-3-Clause
license-file:       LICENSE
author:             Iavor Diatchki
maintainer:         iavor.diatchki@gmail.com
copyright:          Galois Inc, 2023
category:           Language
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall -O2

common extensions
    default-extensions:
      OverloadedStrings,
      BlockArguments,
      ImportQualifiedPost,
      DeriveFunctor,
      DeriveFoldable,
      DeriveTraversable,
      DerivingVia,
      FlexibleInstances,
      FlexibleContexts,
      TypeFamilies,
      DataKinds,
      MultiParamTypeClasses,
      FunctionalDependencies

common executable
    import: warnings, extensions
    ghc-options: -threaded -rtsopts "-with-rtsopts=-N1 -A64m"




library
    import: warnings, extensions
    exposed-modules:
      Cryptol.Compiler.IR
      Cryptol.Compiler.IR.Type
      Cryptol.Compiler.IR.EvalType
      Cryptol.Compiler.IR.Subst

      Cryptol.Compiler.Cry2IR.Monad
      Cryptol.Compiler.Cry2IR.Specialize
      Cryptol.Compiler.Cry2IR.InstanceMap

      Cryptol.Compiler.Monad
      Cryptol.Compiler.Error
      Cryptol.Compiler.PP
      Cryptol.Compiler.Simple
      Cryptol.Compiler.CompileType

      -- Cryptol.Compiler.Rust.CodeGen
    -- other-modules:
    build-depends:
      base,
      containers,
      text,
      pretty,
      cryptol,
      monadLib,
      bytestring,
      language-rust

    hs-source-dirs:   src
    default-language: Haskell2010

executable cryptol-compiler
    import:           executable
    main-is:          Main.hs
    other-modules:
      Options
    build-depends:
        base,
        containers,
        simple-get-opt,
        cryptol-compiler,
        cryptol

    hs-source-dirs:   app
    default-language: Haskell2010

test-suite cryptol-compiler-test
    import:           executable
    default-language: Haskell2010
    -- other-modules:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base,
        cryptol-compiler
